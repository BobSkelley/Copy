<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FitnessTracker.ViewModels"
             x:DataType="viewmodels:AddGoalViewModel"
             x:Class="FitnessTracker.Views.AddGoalPage"
             Title="Add New Goal">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label 
                Text="Add New Goal"
                Style="{StaticResource Headline}"
                Margin="0,20,0,0"
                HorizontalOptions="Center" />

            <Border WidthRequest="350" HorizontalOptions="Center" Padding="20" StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Goal Description" />
                    <Entry Text="{Binding Description}" Placeholder="e.g., Run 20 km this week" />

                    <Label Text="Target Value" />
                    <Entry Text="{Binding TargetValue}" Keyboard="Numeric" />

                    <Button Text="Save Goal" Command="{Binding SaveGoalCommand}" Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>