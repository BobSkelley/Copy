<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTracker.Views.WorkoutLogPage"
             Title="Log Workout">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label 
                Text="Log Workout"
                Style="{StaticResource Headline}"
                Margin="0,20,0,0"
                HorizontalOptions="Center" />

            <Border WidthRequest="350" HorizontalOptions="Center" Padding="20" StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Exercise Type" />
                    <Entry Placeholder="e.g., Running, Swimming" />

                    <Label Text="Date" />
                    <DatePicker />

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Duration (minutes)" />
                            <Entry Keyboard="Numeric" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="15">
                            <Label Text="Distance (km)" />
                            <Entry Keyboard="Numeric" />
                        </VerticalStackLayout>
                    </Grid>

                    <Button Text="Save Workout" Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>