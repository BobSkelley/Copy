<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FitnessTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FitnessTracker"
    xmlns:views="clr-namespace:FitnessTracker.Views"
    Title="FitnessTracker">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="New Workout"
            ContentTemplate="{DataTemplate views:WorkoutLogPage}"
            Route="WorkoutLogPage" />

        <ShellContent
            Title="Progress"
            ContentTemplate="{DataTemplate views:ProgressPage}"
            Route="ProgressPage" />

        <ShellContent
            Title="My Goals"
            ContentTemplate="{DataTemplate views:GoalsPage}"
            Route="GoalsPage" />

        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate views:UserProfilePage}"
            Route="UserProfilePage" />
    </TabBar>

</Shell>