<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTracker.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label
                Text="Athlete Fitness Tracker"
                Style="{StaticResource Headline}"
                Margin="0,20,0,0"
                HorizontalOptions="Center" />

            <Border StrokeShape="RoundRectangle 10" Padding="15" HorizontalOptions="Center" WidthRequest="350" VerticalOptions="Start">
                <VerticalStackLayout Spacing="15">
                    <Button
                        x:Name="NewWorkoutBtn"
                        Text="New Workout"
                        Clicked="OnNewWorkoutClicked" />

                    <Button
                        x:Name="ViewProgressBtn"
                        Text="View Progress"
                        Clicked="OnViewProgressClicked" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>